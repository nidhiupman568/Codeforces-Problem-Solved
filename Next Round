#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n = 0, k = 0;
    cin >> n >> k;
    int arr[n];
    for (int i = 0; i < n; i++)
    {
        cin >> arr[i];
    }
    int h = arr[k - 1];
    int count = 0;
    for (int i = 0; i < n; i++)
    {
        if (arr[i] >= h && arr[i] != 0)
        {
            count++;}
    }
    cout << count;

    return 0;
}
