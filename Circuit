#include <bits/stdc++.h>
using namespace std;
 
typedef vector<int> vi;
typedef pair<int,int> pi;
#define f first
#define s second
#define pb push_back
#define mp make_pair
#define rep(i,a,b) for (int i = a; i < b; i++)
#define sq(a) (a)*(a)
#define dbg(x) cout << #x << " = " << x << "\n"
#define int long long
 
 
void solve(){
    int n; cin>>n;
    int oc=0;
    rep(i,0,2*n) {int e; cin>>e; oc+=e;}
    cout<<oc%2<<" "<<min(oc,2*n-oc)<<"\n";
 
}
 
int32_t main()
{
 
 ios_base::sync_with_stdio(false);
 cin.tie(NULL);
 
    int T = 1;
    cin >> T;
    while (T--)
    {
        solve();
    }
    return 0;
}
