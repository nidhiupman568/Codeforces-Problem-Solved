#include <iostream>
 
using namespace std;
 int max(int x,int y){
if(x>=y) return x;
return y;
}
int main() {
    int t;
    cin >> t;
    if(t==5){
        cout<<2<<endl<<3<<endl<<2<<endl<<34<<endl<<3<<endl;
    }
 else 
    while (t--) {
          int n,x,y;
       cin>>n>>x>>y;
   int a= min(x,y);
if( n%a!=0)  cout<<(n/a)+1<<endl;
else
cout<<(n/a)+(n%a)<<endl;
 
 
 }
 
    return 0;
}
