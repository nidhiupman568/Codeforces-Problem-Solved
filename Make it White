   void solve()
{
        ll t , q ,   x  , y , l , r , i , n , m , j , k , mn = 2e9;
        cin>>n;
        string s;
        cin>>s;
        ll ans=-1,ans1=-1;
        for(i=0;i<s.size();i++){
              if(s[i]=='B'){
                ans1=i;
                if(ans==-1){
                    ans=i;
                }
              }
        }
        if(ans==-1){
            cout<<0<<endl;
            return;
        }
        cout<<(ans1-ans)+1<<endl;
}
int main (){
      ll t=1;
        cin>>t;
           while(t--){
             solve();
           }
}
